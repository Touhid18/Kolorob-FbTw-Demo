<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 5px Shadow -->
    <!-- <item android:left="5px" android:top="5px"> -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/Snow3" />

            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/Snow2" />

            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>